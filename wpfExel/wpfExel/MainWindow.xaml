<Window x:Class="wpfExel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfExel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
        <Button Name="start" Content="Start" Tag="1" Click="start_Click"></Button>
        <Button Name="stop" Content="Stop" Tag="2" Click="start_Click"></Button>
        <Button Name="exit" Content="Exit" Click="start_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
